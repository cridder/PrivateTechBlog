<div>
    <h4>Title</h4>
    <textarea class="w-100" name="title" id="title" cols="1" rows="1">{{post.title}}</textarea>
    <h4>Post</h4>
    <textarea class="w-100" name="content" id="content" cols="30" rows="5">{{post.content}}</textarea>
    <div class="btn-group w-100">
        {{#if postNew}}
        <button class="btn btn btn-dark" id="tbcreatepost">Create Post</button>
        <button class="btn btn btn-dark" id="cancelPost">Cancel</button>
        {{else}}
        <button class="btn btn btn-dark" id="updatePost">Update Post</button>
        <button class="btn btn btn-dark" id="deletePost">Delete Post</button>
        {{/if}}
    </div>
</div>
{{#if postNew}}
<script src="../js/post.js"></script>
{{else}}
<script src="../../js/post.js"></script>
{{/if}}